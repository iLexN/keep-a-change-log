{
    "name": "ilexn/keep-a-change-log",
    "description": "Create change log follow keepachangelog.com",
    "authors": [
        {
            "name": "iLexN",
            "email": "ilex.job@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ilex\\ChangeLog\\": "src"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "squizlabs/php_codesniffer": "3.1.1",
        "phpunit/phpunit": "^6.5"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "ci": [
            "@phpcs",
            "@test"
        ],
        "dev":[
            "clear",
            "@cs-fix",
            "@phpcs",
            "@test-dev"
        ],
        "cs-fix": "php-cs-fixer fix",
        "phpcs": "phpcs --standard=PSR2 src tests",
        "docs" : "@php ./sami.phar update .sami",
        "test-dev" : "phpunit --coverage-text",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "phpcs": "Checks that the application code conforms to coding standard",
        "test": "Launches the preconfigured PHPUnit"
    }
}
